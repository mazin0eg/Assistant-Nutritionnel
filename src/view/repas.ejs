                    </div>
                </div>
            </div>
        </div>

        <!-- Contenu principal -->
        <div class="flex-1 lg:p-8 p-4">
            <!-- Header -->
            <div class="flex items-center justify-between mb-8">
                <div>
                    <div class="flex items-center lg:hidden mb-4">
                        <button id="menu-toggle" class="w-10 h-10 flex items-center justify-center rounded-xl bg-white shadow-lg border border-gray-100 mr-4 hover:shadow-xl transition-all duration-300">
                            <i class="fas fa-bars text-gray-700"></i>
                        </button>
                        <div class="flex items-center">
                            <div class="w-8 h-8 bg-gradient-to-r from-green-400 to-green-600 rounded-lg flex items-center justify-center mr-2">
                                <i class="fas fa-leaf text-white text-sm"></i>
                            </div>
                            <h1 class="text-xl font-bold bg-gradient-to-r from-green-600 to-green-800 bg-clip-text text-transparent">NutriTrack</h1>
                        </div>
                    </div>
                    <h2 class="text-3xl lg:text-4xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent mb-2">
                        Repas - 
                        <% if (typeof user !== 'undefined' && user.nom_complet) { %>
                            <%= user.nom_complet %>
                        <% } else { %>
                            Utilisateur
                        <% } %>
                    </h2>
                    <p class="text-gray-600 text-lg">
                        Gérez vos repas et analysez votre nutrition - Objectif: 
                        <strong>
                            <% if (typeof user !== 'undefined' && user.goal) { %>
                                <%= user.goal %>
                            <% } else { %>
                                Non défini
                            <% } %>
                        </strong>
                    </p>
                </div>
            </div>

            <!-- Contenu principal de la page Repas -->
            <div class="max-w-6xl mx-auto">
                <!-- Section Ajouter un repas -->
