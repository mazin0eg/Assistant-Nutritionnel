                                    <% if (typeof user !== 'undefined' && user.nom_complet) { %>
                                        <%= user.nom_complet.charAt(0).toUpperCase() %><%= user.nom_complet.split(' ')[1] ? user.nom_complet.split(' ')[1].charAt(0).toUpperCase() : '' %>
                                    <% } else { %>
                                        U
                                    <% } %>
                                </span>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-800">
                                    <% if (typeof user !== 'undefined' && user.nom_complet) { %>
                                        <%= user.nom_complet %>
                                    <% } else { %>
