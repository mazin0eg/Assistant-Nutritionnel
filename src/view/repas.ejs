                            <div class="grid grid-cols-3 gap-4 mb-4 text-sm font-medium text-gray-600 border-b border-gray-200 pb-2">
                                <div>Aliments</div>
                                <div class="text-center">Quantité</div>
                                <div class="text-center">Calories</div>
                            </div>
                            
                            <!-- Lignes du tableau -->
