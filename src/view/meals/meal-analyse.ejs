  <style>
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    @keyframes slideUp {
      from { 
        opacity: 0;
        transform: translateY(20px);
      }
      to { 
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .loading-overlay {
      animation: fadeIn 0.3s ease-out;
    }
    
    .loading-card {
      animation: slideUp 0.3s ease-out;
    }
    
    @keyframes progress {
      0% { width: 0%; }
      50% { width: 70%; }
      100% { width: 85%; }
    }
    
    .progress-bar {
      animation: progress 3s ease-in-out infinite;
    }
  </style>
</head>
